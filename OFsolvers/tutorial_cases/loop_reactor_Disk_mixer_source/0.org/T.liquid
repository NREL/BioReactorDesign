FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T.liquid;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "../constant/globalTransport"

dimensions          [0 0 0 1 0 0 0];

internalField       uniform $Temp;

boundaryField
{
    cyl2
    {
        type               zeroGradient;
    }
    cyl4
    {
        type               zeroGradient;
    }
    walls
    {
        type               zeroGradient;
    }
    pipes
    {
        type               zeroGradient;
    }
    outlet
    {
        type               inletOutlet;
        phi                phi.liquid;
        inletValue         $internalField;
        value              $internalField;
    }
    cyl1
    {
        type                zeroGradient;
    }
    cyl3
    {
        type                zeroGradient;
    }
}


    nCorrectors         5;
    nNonOrthogonalCorrectors 0;

    faceMomentum        true;

}

relaxationFactors
{
}
*/
PIMPLE
{
    nNonOrthogonalCorrectors 0;
    nCorrectors          5;
    nOuterCorrectors    3;
    faceMomentum true;

    outerCorrectorResidualControl
    {
        U
	{
                tolerance  1e-5;
                relTol      0;
        }
        p_rgh
        {
                tolerance  5e-4;
                relTol      0;
        }
     }
}
 
relaxationFactors
{
    fields
    {
        p_rgh      0.3;
        p_rghFinal   1;
    }
    equations
    {
        "U.gas|U.water|e.gas|e.water"     0.3;
        "(U.gas|U.water|e.gas|e.water)Final"   1;
    }
}

FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "80";
    object      thermo:mu.liquid;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -1 0 0 0 0];

internalField   uniform 0.001;

boundaryField
{
    inlet
    {
        type            calculated;
        value           uniform 0.001;
    }
    outlet
    {
        type            calculated;
        value           uniform 0.001;
    }
    walls
    {
        type            calculated;
        value           uniform 0.001;
    }
}



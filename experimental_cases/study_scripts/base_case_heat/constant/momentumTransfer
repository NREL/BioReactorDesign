drag
{
    blending        segregated;

    gas_dispersedIn_liquid
    {
        type            SchillerNaumann;
    }

    liquid_dispersedIn_gas
    {
        type            SchillerNaumann;
    }

    gas_segregatedWith_liquid
    {
        type            segregated;
        m               0.5;
        n               8;
    }
}

virtualMass
{
    gas_dispersedIn_liquid
    {
        type            constantCoefficient;
        Cvm             0.5;
    }

    liquid_dispersedIn_gas
    {
        type            constantCoefficient;
        Cvm             0.5;
    }
}

lift
{}

wallLubrication
{
    gas_dispersedIn_liquid
    {
        type            Antal;
        Cw1             -0.01;
        Cw2             0.05;
    }

    liquid_dispersedIn_gas
    {
        type            Antal;
        Cw1             -0.01;
        Cw2             0.05;
    }
}

turbulentDispersion
{
    gas_dispersedIn_liquid
    {
        type            Burns;
        sigma           0.9;
    }

    liquid_dispersedIn_gas
    {
        type            Burns;
        sigma           0.9;
    }
}


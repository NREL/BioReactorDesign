// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
inlet
{

    type        annulus;
    zoneType    face;

    point1 (0 -1 0);
    point2 (0 -0.159 0);
    outerRadius 0.13;
    innerRadius 0.12;
}

baffles
{
    type union;
    
    baffle1
    {
        type        box;
        zoneType    face;

        box     (-0.001 -1 0.13) (0.001 1 1);
    };
    
    baffle2
    {
        type        box;
        zoneType    face;

        box     (0.13 -1 -0.001 ) (1  1 0.001);
    };

    baffle3
    {
        type        box;
        zoneType    face;

        box     (-0.001 -1 -1) (0.001  1 -0.13);
    };

    baffle4
    {
        type        box;
        zoneType    face;

        box     (-0.001 -1 0.13) (0.001 1 1);
    };
}


